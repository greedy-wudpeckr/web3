generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(cuid())
  email String
}

model Website{
  id String @id @default(cuid())
  url String
  userId String
  ticks WebsiteTick[]
}

model Validator{
  id String @id @default(cuid())
  publicKey String
  location  String
  ip String
  ticks WebsiteTick[]
}

model WebsiteTick{
  id String @id @default(cuid())
  websiteId String
  validatorId String
  status String
  latency Float
  createdAt DateTime 
  website Website @relation(fields: [websiteId], references: [id])
  validator Validator @relation(fields: [validatorId], references: [id])
}

enum WebsiteStatus {
Good
Bad
}